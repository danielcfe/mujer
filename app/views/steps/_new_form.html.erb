	<h2>Add a Step:</h2>
	<%= form_for([@post, @post.steps.build] , :remote => true) do |f| %>
	  <div class="field">
	    <%= f.label 'Title' %><br />
	    <%= f.text_field :title, :class => 'span6' %>
	  </div>
	  <div class="field">
	    <%= f.label 'Description' %><br />
	    <%= f.text_area :content, :class => 'span6' %>
	  </div>
	  <div class="actions">
	    <%= f.submit %>
	  </div>
	<% end %>