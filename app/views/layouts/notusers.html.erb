<!DOCTYPE html>
<html>
<head>
  <title>Wuoman!</title>
  <%= stylesheet_link_tag    "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-fixed-top">
	  <div class="navbar-inner">
	    <div class="container">
	      <a class="brand" href="<%= root_url %>">Wuoman!</a>
	      <div class="nav-collapse">
            <ul class="nav">
            	<li class="divider-vertical"></li>
              <li class="">
                <a href="<%= new_post_url %>" title="Create a new post"><i class="icon-edit icon-white"></i>&nbsp;</a>
              </li>
            </ul>
            <form class="navbar-search pull-left" action="">
	        	<input type="text" class="search-query span2" placeholder="Search">
	        </form>
	       </div>
	    </div>
	  </div>
	</div>
	<header>
		<div class="notification notification_alert">
	        <% if alert || flash[:notice] || notice %>
				<div class="container">
		        	<span id="notificator_close" class=""> <%= alert || flash[:notice] %> </span>
		        	<a class="close" href="#">&times;</a>
		        </div>
			<% end %>          
	    </div>
	</header>
	<div id="content" class="container">
		<%= yield %>
	</div>
	<div id="footer" class="container">
	  
	</div>
	
	<%= javascript_include_tag "application" %>
	<% if alert || flash[:notice] || notice %>
                 <script>
                        $(".notification").fadeIn();
                        $("#content").css('margin-top','100px');
                        $("#notificator_close").click(function (){
                                $(".notification").fadeOut();
                                $("#content").animate( { marginTop:"60px" }, 500);
                        });
                 </script>
        <% end %>
</body>
</html>
