<h1>Edit a Recipe</h1>

<div id="post_edit">
	<div id="notice">
		<% if flash[:notice] %>
			<%= flash[:notice] %>
		<% end %>
	</div>
	<%= render 'new_form' %>
</div>
<div id="post_steps">
  <%= render @post.steps %>
</div>
<div id="post_steps_form">
	<h2>Add a Step:</h2>
	<%= form_for([@post, @post.steps.build] , :remote => true) do |f| %>
	  <div class="field">
	    <%= f.label 'Step title' %><br />
	    <%= f.text_field :title %>
	  </div>
	  <div class="field">
	    <%= f.label 'Step description' %><br />
	    <%= f.text_area :content %>
	  </div>
	  <div class="actions">
	    <%= f.submit %>
	  </div>
	<% end %>
</div>
